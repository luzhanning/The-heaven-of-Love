<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.UserMapper">
    <select id="findAll" resultType="model.User">
      select * FROM users
    </select>

    <insert id="insert">
        insert into users(id,password,nickname,sex,sex1) values (#{id},#{password},#{nickname},#{sex},#{sex1})
    </insert>

    <delete id="delete">
        delete from users where id = #{id}
    </delete>

    <select id="userExists" resultType="model.User">
        select * from users where id = #{id}
    </select>

    <select id="login" resultType="model.User">
        select * from users where id = #{id} and password = #{password}
    </select>
    <select id="getSex" resultType="java.lang.String">
        select sex from users where id = #{id}
    </select>
    <select id="getSex1" resultType="java.lang.String">
        select sex1 from users where id = #{id}
    </select>
    <select id="getNickname" resultType="java.lang.String">
        select nickname from users where id = #{id}
    </select>



</mapper>